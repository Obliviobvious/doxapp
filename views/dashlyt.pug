        style(type='text/css').
            .foot {
                position: fixed;
                width: 100%;
                left: 0;
                bottom: 0;
                text-align: center;
            }
            .tlnk {
                margin-top: 20px;
            }
            .sidenav-active {
                background-color: #9E93AD;
            }
        block head

    body.w-100.h-100
        header
            nav.navbar.navbar-expand-lg.bg-dark
                a.navbar-brand(href='/')
                    img.d-inline-block.align-top(src='/images/logo.svg', width='40', height='40', alt='')
